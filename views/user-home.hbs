
{{#if loggedUser}}
<h1>Browser {{title}}</h1>
            <h1 class="text-center">Courses</h1>

                <a href="/create" class="btn btn-warning ">Create Course</a>
                <form class="search float-right">
                    <label>Search: </label>
                    <input type="text">
                    <input type="submit" class="btn btn-info" value="Search">
                </form>
            <div class="container mt-3">
                
                <div class="row ">
                    
                    
                        {{#each course}}
                        <div class="card mb-4">
                            <div class="card-deck">
                            <img class="card-img-top"
                                src="{{imageUrl}}"
                                alt="Card image cap" width="400">
                            <div class="card-body">
                                <h4 class="card-title">{{title}}</h4>
                            </div>
                            <div class="card-footer">
                                <a href="/course-details/{{_id}}"><button type="button" class="btn btn-info" href="/course-details/{{_id}}">Details</button></a>
                                <small class="float-right">{{startTime}}</small>
                            </div>
                            
                        </div>  
            {{else}}                               
                </div>
            </div>
            <h3 class="text-center">No courses...</h3>
            {{/each}}



{{else}}
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Video Tutorials</h1>
                    <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
                </div>
            </div>
            <div>
                <h1 class="text-center">Top Courses</h1>
                <div class="container mt-3">
                    <div class="row d-flex justify-content-center">
                        
                        
                            {{#each course}}
                            <div class="card mb-4">
                                <div class="card-deck">
                                <img class="card-img-top"
                                    src="{{imageUrl}}"
                                    alt="Card image cap" width="400">
                                <div class="card-body">
                                    <h4 class="card-title">{{title}}</h4>
                                </div>
                                                            <div class="card-footer">
                                <a href="/course-details/{{_id}}"><button type="button" class="btn btn-info" href="/course-details/{{_id}}">Details</button></a>
                                <small class="float-right">{{startTime}}</small>
                            </div>
                            </div>
                    {{else}}                               
                </div>
            </div>
            <h3 class="text-center">No courses...</h3>
            {{/each}}
{{/if}}